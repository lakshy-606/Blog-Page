<%- include("partials/header"); -%>

  <h1 style="margin-bottom: 15px;">Compose</h1>

  <form action="/compose" method="post">
    <div class="mb-3">
      <label for="exampleFormControlInput1" class="form-label" style="margin: 5px;">Title</label>
      <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="Enter the Title" name="postTitle">
    </div>
    <div class="mb-3">
      <label for="exampleFormControlTextarea1" class="form-label " style="margin: 5px;">Post</label>
      <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" name="postBody"></textarea>
    </div>
    <button type="submit" class="btn btn-primary" style="margin-top: 5px;">Publish</button>
  </form>
  
<%- include("partials/footer"); -%>
